<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="5dp" >
        <TextView 
            android:id="@+id/order_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#999B9E"
            android:textSize="14sp" />
        
        <TextView 
            android:id="@+id/order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#FE6868"
            android:textSize="14sp" />
        <View 
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E1E1E1"
            android:layout_below="@id/order_no_tv"
            android:layout_marginTop="8dp" />
        <LinearLayout 
            android:id="@+id/p_container_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"  >
            <com.loopj.android.image.SmartImageView 
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_marginLeft="8dp" 
	            android:padding="5dp"
	            android:visibility="invisible"
	            android:background="@drawable/search_et_shap"  />
            <com.loopj.android.image.SmartImageView 
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_marginLeft="8dp" 
	            android:padding="5dp"
	            android:visibility="invisible"
	            android:background="@drawable/search_et_shap"  />
            <com.loopj.android.image.SmartImageView 
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_marginLeft="8dp" 
	            android:padding="5dp"
	            android:visibility="invisible"
	            android:background="@drawable/search_et_shap"  />
            <com.loopj.android.image.SmartImageView 
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_marginLeft="8dp" 
	            android:padding="5dp"
	            android:visibility="invisible"
	            android:background="@drawable/search_et_shap"  />
            <com.loopj.android.image.SmartImageView 
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:layout_marginLeft="8dp" 
	            android:padding="5dp"
	            android:visibility="invisible"
	            android:background="@drawable/search_et_shap"  />
        </LinearLayout>
        <View 
            android:id="@+id/p_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E1E1E1"
            android:layout_below="@id/p_container_ll"
            android:layout_marginTop="10dp" />
        
        <TextView 
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/p_divider"
            android:textStyle="bold"
            android:textColor="#F23030"
            android:textSize="20sp"  />
        <Button 
            android:id="@+id/do_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p_divider"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/order_item_btn_bg"
            android:focusable="false"
            android:textStyle="bold"
            android:textColor="#F44A4A"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>