<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- 头部 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FAFAFA"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:onClick="goBack"
            android:src="@drawable/goback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="订单列表"
            android:textColor="#BB1F35"
            android:textSize="18sp" />
    </LinearLayout>

    <include layout="@layout/divider_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/all_order_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="所有订单"
                android:textSize="16sp" />

            <View
                android:id="@+id/all_order_view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#F33F3F" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wait_pay_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待支付"
                android:textSize="18sp" />

            <View
                android:id="@+id/wait_pay_view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#F33F3F"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wait_receive_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待收货"
                android:textSize="18sp" />

            <View
                android:id="@+id/wait_receive_view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#F33F3F"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wait_sure_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已完成"
                android:textSize="18sp" />

            <View
                android:id="@+id/wait_sure_view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#F33F3F"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/divider_layout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>